@model IEnumerable<Hospital_Management_System.Models.Appointment>
@{
    ViewBag.Title = "Appointment List";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded">
        <div class="card-header bg-info text-white text-center">
            <h4 class="mb-0">Appointment List</h4>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Doctor ID</th>
                                <th>Patient ID</th>
                                <th>Information</th>
                                <th>Appointment Date</th>                               
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var apmt in Model)
                            {
                                <tr>
                                    <td class="text-center">@apmt.Doctor_Id</td>
                                    <td>@apmt.Patient_Id</td>
                                    <td>@apmt.Information</td>
                                    <td class="text-center">@apmt.Appointment_Date</td>
                                  
                                    <td class="text-center">
                                        @Html.ActionLink("Update", "Update", new { id = apmt.Appointment_Id }, new { @class = "btn btn-sm btn-outline-primary" })
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Delete", "Delete", new { id = apmt.Appointment_Id }, new { @class = "btn btn-sm btn-outline-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No appointments found.
                </div>
            }

            <div class="text-center mt-4">
                <a href="/Appointment/Create" class="btn btn-success px-4 py-2">
                    ➕ Book Appointment Here
                </a>
            </div>
        </div>
    </div>
</div>
