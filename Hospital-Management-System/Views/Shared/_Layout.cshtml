<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hospital Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
    <style>
        .gradient-navbar {
            background: linear-gradient(90deg, #5b86e5, #36d1dc); /* Blue to teal gradient */
        }

        footer p, footer a, footer h6 {
            color: #fff !important;
        }

        .nav-link {
            color: #ffffff !important;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #ffd700 !important; /* Gold on hover */
            }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #fff !important;
        }

            .navbar-brand:hover {
                color: #ffe36b !important;
            }

        .nav-item .active {
            border-bottom: 2px solid #fff;
        }
    </style>

</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-sm navbar-dark gradient-navbar shadow-sm">
        <div class="container">
            @Html.ActionLink("Hospital Management System", "Index", "Home", null, new { @class = "navbar-brand" })
            @*<a href="/Home/Index" class="text-dark text-decoration-none mb-1">Hospital Management System</a>*@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <!-- Left Links -->
                <ul class="navbar-nav me-auto">

                    @if (Session["role"] != null &&
                        (Session["role"].ToString() == "Doctor" || Session["role"].ToString() == "Admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Doctor Portal", "Index", "Doctor", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Appointment Marker", "Index", "AppointmentMarker", null, new { @class = "nav-link" })</li>

                    }
                    @if (Session["role"] != null &&
                        (Session["role"].ToString() == "Patient" || Session["role"].ToString() == "Admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Patient Portal", "Index", "Patient", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Appointment Portal", "Index", "Appointment", null, new { @class = "nav-link" })</li>
                    }

                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>

                </ul>

                <!-- Right Links (Login/Register/Logout) -->
                <ul class="navbar-nav">
                    @if (Session["role"] == null)
                    {
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <!-- Show Logout and Welcome if logged in -->
                        <li class="nav-item">
                            <span class="nav-link text-success">Welcome, @Session["username"]!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">Logout</a>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="container flex-grow-1 py-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white border-top" style="background: linear-gradient(90deg, #667eea, #764ba2);">
        <div class="container py-3">
            <div class="row gy-3 text-center text-md-start">

                <!-- Hospital Info -->
                <div class="col-md-4">
                    <h6 class="text-white fw-bold mb-2">🏥 Hospital Management System</h6>
                    <p class="small mb-1">Compassionate care with modern technology since 2025.</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4">
                    <h6 class="text-white fw-bold mb-2">Quick Links</h6>
                    <div class="d-flex flex-column small">
                        <a href="/" class="text-white text-decoration-none mb-1">🏠 Home</a>
                        <a href="/" class="text-white text-decoration-none mb-1">👨‍⚕️ Doctors</a>
                        <a href="/" class="text-white text-decoration-none mb-1">🧑‍🤝‍🧑 Patients</a>
                        <a href="/" class="text-white text-decoration-none">📞 Contact</a>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4">
                    <h6 class="text-white fw-bold mb-2">Contact</h6>
                    <p class="small mb-1">📍 XXX XXX, New Delhi</p>
                    <p class="small mb-1">✉️ ugupta.netdev@gmail.com</p>
                    <p class="small mb-0">📞 +91-9876XXXXXX</p>
                </div>
            </div>

            <hr class="my-2" />

            <div class="row small align-items-center">
                <div class="col-md-8">
                    <p class="mb-0">© @DateTime.Now.Year <strong>Hospital Management System</strong>. All Rights Reserved.</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="#" class="text-white me-2"><i class="fab fa-facebook fa-sm"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-twitter fa-sm"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-instagram fa-sm"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-linkedin fa-sm"></i></a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>