@{
    ViewBag.Title = "Hospital Management Service";   
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">🏥 @ViewBag.Title</h1>
        <p class="lead text-secondary">
            Welcome to our hospital management system. Explore patient and doctor registration below.
        </p>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Patient Registration Section -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body p-4">
                    <h4 class="text-success text-center mb-3">📅 Patient Registration</h4>
                    <p class="text-muted fs-5">
                        Book your appointments quickly and easily with our online system.
                    </p>
                    <p class="text-muted fs-6">
                        Patients can register to access expert medical care in various specializations such as Cardiology, Neurology, Orthopedics, and Pediatrics.
                    </p>
                    <p class="text-muted fs-6">
                        Your health is our priority. Register today and consult with top doctors.
                    </p>
                </div>
            </div>
        </div>

        <!-- Doctor Registration Section -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body p-4">
                    <h4 class="text-info text-center mb-3">🩺 Doctor Registration</h4>
                    <p class="text-muted fs-5">
                        Are you a medical professional? Join our dedicated team of doctors.
                    </p>
                    <p class="text-muted fs-6">
                        We welcome qualified specialists from all fields — General Medicine, Surgery, Pediatrics, Cardiology, and more.
                    </p>
                    <p class="text-muted fs-6">
                        Help us provide world-class care by registering as a doctor in our hospital network.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
