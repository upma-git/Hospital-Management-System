@model IEnumerable<Hospital_Management_System.Models.Doctor>
@{
    ViewBag.Title = "Doctor List";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded">
        <div class="card-header bg-info text-white text-center">
            <h4 class="mb-0">Doctor List</h4>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Doctor ID</th>
                                <th>Name</th>
                                <th>Qualification</th>
                                <th>Age</th>
                                <th>Specialization</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in Model)
                            {
                                <tr>
                                    <td class="text-center">@doctor.doctor_id</td>
                                    <td>@doctor.doctor_name</td>
                                    <td>@doctor.doctor_qualification</td>
                                    <td class="text-center">@doctor.doctor_age</td>
                                    <td>@doctor.specialization</td>
                                    <td class="text-center">
                                        @Html.ActionLink("Update", "Update", new { id = doctor.doctor_id }, new { @class = "btn btn-sm btn-outline-primary" })
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("Delete", "Delete", new { id = doctor.doctor_id }, new { @class = "btn btn-sm btn-outline-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No doctors found.
                </div>
            }

            <div class="text-center mt-4">
                <a href="/Doctor/Create" class="btn btn-success px-4 py-2">
                    ➕ Register Doctor Here
                </a>
            </div>
        </div>
    </div>
</div>
